<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.MainPage">


    <ContentPage.Resources>
        
    </ContentPage.Resources>
    

    <StackLayout BackgroundColor="AliceBlue" VerticalOptions="Center" Margin="15">


        <Entry x:Name="emailEntry"  Placeholder="Email" Keyboard="Email" TextColor="{StaticResource blueColor}" Text="Email"/>

        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" TextColor="{StaticResource blueColor}" Text="Password"/>

        <Button x:Name="loginButton" Text="Login"   Clicked="loginButton_Clicked" Background="{StaticResource blueColor}" TextColor="White"/>

    </StackLayout>

</ContentPage>
